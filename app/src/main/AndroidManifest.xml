<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.banghs.completerecyclerview">
    <!-- Because we are taking photo from the internet, then add internet permission here -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/unpab"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.banghs.completerecyclerview.activities.DetailActivity"></activity>
        <activity android:name="com.banghs.completerecyclerview.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>